<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true" >

    <LinearLayout
        android:id="@+id/activityArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/btnWeiNai"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/ic_action_weinai"
            android:text="@string/weinai" />

        <ImageButton
            android:id="@+id/btnShuiJiao"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/ic_action_shuijiao"
            android:text="@string/shuijiao" />

        <ImageButton
            android:id="@+id/btnXiaoBian"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/ic_action_xiaobian"
            android:text="@string/xiaobian" />

        <ImageButton
            android:id="@+id/btnDaBian"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/ic_action_dabian"
            android:text="@string/dabian" />
    </LinearLayout>

    <ListView
        android:id="@+id/listViewDayPlan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/activityArea"
        android:background="@drawable/widget_bg" >
    </ListView>

</RelativeLayout>