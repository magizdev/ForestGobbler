<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true" >

        <LinearLayout
            android:id="@+id/activityArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/btnWeiNai"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_bg"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_action_weinai"
                    android:text="@string/activity_breed" />

                <ImageButton
                    android:id="@+id/btnShuiJiao"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_bg"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_action_shuijiao"
                    android:text="@string/activity_sleep" />

                <ImageButton
                    android:id="@+id/btnXiaoBian"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_bg"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_action_xiaobian"
                    android:text="@string/activity_pee" />

                <ImageButton
                    android:id="@+id/btnDaBian"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_bg"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_action_dabian"
                    android:text="@string/activity_poo" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/summaryArea"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/widget_bg"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Summary Area" />
        </LinearLayout>

        <ListView
            android:id="@+id/listViewDayPlan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/summaryArea"
            android:layout_above="@id/activityArea" >
        </ListView>
    </RelativeLayout>

</merge>