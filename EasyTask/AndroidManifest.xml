<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.magizdev.easytask"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="12"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar" >
        <provider
            android:name=".store.EasyTaskProvider"
            android:authorities="com.magizdev.easytask" />

        <activity
            android:name=".TaskListActivity"
            android:label="@string/title_activity_task_list" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TaskEditActivity"
            android:label="@string/title_activity_task_edit" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="TaskEditActivity" />
        </activity>
    </application>

</manifest>